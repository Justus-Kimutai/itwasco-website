---
import { companyInfo } from "../../data/company";
---

<section class="relative overflow-hidden bg-gradient-to-br from-secondary-800 to-secondary-900 py-16 sm:py-24">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <svg class="h-full w-full" viewBox="0 0 100 100" preserveAspectRatio="none">
      <defs>
        <pattern id="leaf-pattern" x="0" y="0" width="40" height="40" patternUnits="userSpaceOnUse">
          <path d="M20 0 Q30 20 20 40 Q10 20 20 0" fill="currentColor" />
        </pattern>
      </defs>
      <rect width="100" height="100" fill="url(#leaf-pattern)" />
    </svg>
  </div>

  <div class="relative mx-auto max-w-4xl px-4 text-center sm:px-6 lg:px-8">
    <!-- Quote Icon -->
    <svg
      class="mx-auto h-12 w-12 text-secondary-400"
      fill="currentColor"
      viewBox="0 0 24 24"
    >
      <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
    </svg>

    <!-- Quote Text -->
    <blockquote class="mt-8">
      <p class="text-xl font-medium leading-relaxed text-white sm:text-2xl lg:text-3xl">
        {companyInfo.about.commitment}
      </p>
    </blockquote>

    <!-- Divider -->
    <div class="mx-auto mt-8 h-1 w-24 rounded-full bg-secondary-400/50"></div>

    <!-- Attribution -->
    <div class="mt-6">
      <p class="text-lg font-semibold text-secondary-200">
        {companyInfo.shortName}
      </p>
      <p class="text-sm text-secondary-300">
        Aligned with Kenya Vision 2030
      </p>
    </div>

    <!-- Values Grid -->
    <div class="mt-12 grid grid-cols-2 gap-4 sm:grid-cols-3 lg:grid-cols-6">
      {companyInfo.values.map((value) => (
        <div class="rounded-lg bg-white/5 px-4 py-3 backdrop-blur-sm">
          <p class="text-sm font-medium text-white">{value.name}</p>
        </div>
      ))}
    </div>
  </div>
</section>
