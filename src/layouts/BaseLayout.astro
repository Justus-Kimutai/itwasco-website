---
import "../styles/global.css";
import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "ITWASCO - Providing sustainable water services to Elgeyo Marakwet County, Kenya. Clean, affordable, and reliable water for all." } = Astro.props;
const siteUrl = Astro.site || new URL("https://itwasco.co.ke");
const canonicalURL = new URL(Astro.url.pathname, siteUrl);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/images/logo/itwasco-logo-small.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title} | ITWASCO</title>
    <meta name="title" content={`${title} | ITWASCO`} />
    <meta name="description" content={description} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | ITWASCO`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/images/logo/itwasco-logo.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={`${title} | ITWASCO`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="/images/logo/itwasco-logo.png" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "ITEN TAMBACH WATER AND SEWERAGE COMPANY LIMITED",
        "alternateName": "ITWASCO",
        "url": "https://itwasco.co.ke",
        "logo": "/images/logo/itwasco-logo.png",
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "+254743286720",
          "contactType": "customer service",
          "email": "infoitwasco@gmail.com",
          "areaServed": "KE",
          "availableLanguage": ["English", "Swahili"]
        },
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Water Treatment Works Compound",
          "addressLocality": "Iten",
          "addressRegion": "Elgeyo Marakwet County",
          "postalCode": "30700",
          "addressCountry": "KE"
        }
      }
    </script>
  </head>
  <body class="min-h-screen bg-white text-gray-900 antialiased">
    <!-- Skip to main content link for accessibility -->
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <Header />

    <main id="main-content">
      <slot />
    </main>

    <Footer />
  </body>
</html>
